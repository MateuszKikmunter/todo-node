{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2015", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@todo-node/server/database": ["libs/server/database/src/index.ts"],
            "@todo-node/shared/utils": ["libs/shared/utils/src/index.ts"],
            "@todo-node/todo-app": ["libs/todo-app/src/index.ts"],
            "@todo-node/todo-app/core": ["libs/todo-app/core/src/index.ts"],
            "@todo-node/todo-app/shared": ["libs/todo-app/shared/src/index.ts"],
            "@todo-node/todo-app/shared/util": [
                "libs/todo-app/shared/util/src/index.ts"
            ],
            "@todo-node/todo-app/shared/ui-footer": [
                "libs/todo-app/shared/ui-footer/src/index.ts"
            ],
            "@todo-node/todo-app/shared/ui-header": [
                "libs/todo-app/shared/ui-header/src/index.ts"
            ],
            "@todo-node/todo-app/shared/ui-layout": [
                "libs/todo-app/shared/ui-layout/src/index.ts"
            ],
            "@todo-node/todo-app/todo-feature": [
                "libs/todo-app/todo-feature/src/index.ts"
            ],
            "@todo-node/todo-app/todo/todo-feature": [
                "libs/todo-app/todo/todo-feature/src/index.ts"
            ],
            "@todo-node/todo-app/auth/login-feature": [
                "libs/todo-app/auth/login-feature/src/index.ts"
            ],
            "@todo-node/todo-app/auth/data-access": [
                "libs/todo-app/auth/data-access/src/index.ts"
            ],
            "@todo-node/todo-app/auth/domain": [
                "libs/todo-app/auth/domain/src/index.ts"
            ],
            "@todo-node/todo-app/todo/data-access": [
                "libs/todo-app/todo/data-access/src/index.ts"
            ],
            "@todo-node/todo-app/todo/domain": [
                "libs/todo-app/todo/domain/src/index.ts"
            ]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
