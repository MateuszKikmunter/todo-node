{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2015", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@todo-node/server/database": ["libs/server/database/src/index.ts"],
            "@todo-node/shared/utils": ["libs/shared/utils/src/index.ts"],
            "@todo-node/todo-app": ["libs/todo-app/src/index.ts"],
            "@todo-node/todo-app/core": ["libs/todo-app/core/src/index.ts"],
            "@todo-node/todo-app/shared": ["libs/todo-app/shared/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
